<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <br/> <br/>
    <h3> Create a new listing</h3>
    <form method="POST" action="/listings" novalidate class ="needs-validation">
        <div class="mb-3">
            <lable for="title" class="form-lable">Title</lable>
            <input name="listing[title]" placeholder="enter title" type="text" class="form-control"
            required /> 
            <div class="valid-feedback"> Title looks good!</div>
        </div> 
        <div class="mb-3">
            <lable for="description" class="form-lable">Description</lable>
            <textarea name="listing[description]" class="form-control"
            required ></textarea> 
            <div class="invalid-feedback">Please enter a short description</div>
        </div>
       <div class="mb-3">
        <lable for="image" class="form-lable">Image-link</lable>
        <input name="listing[image]" placeholder="enter image URL/Link" type="text" class="form-control" /> 
       </div>
       <div class="row">
        <div class="mb-3 col-md-4">
            <lable for="price" class="form-lable">Price</lable>
            <input name="listing[price]" placeholder="enter price" 
            class="form-control"
            required/> 
            <div class="invalid-feedback">Please enter a valid price value</div>
           </div>
           <div class="mb-3 col-md-8">
            <lable for="country" class="form-lable">Country</lable>
            <input name="listing[country]" placeholder="enter country" type="text" class="form-control"
            required /> 
            <div class="invalid-feedback">enter valid country name</div>
           </div>
       </div>
       <div class="mb-3">
        <lable for="location" class="form-lable">Location</lable>
        <input name="listing[location]" placeholder="enter location" type="text"class="form-control"
        required/> 
        <div class="invalid-feedback">Please enter accurate location</div>
       </div>
        <button class="btn btn-dark add-btn mt-3"> Add </button>
       
    </form>  
</div>
</div>